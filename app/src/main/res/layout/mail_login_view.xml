<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/mail_login_background"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/title_bar"
        android:background="#292929"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <Button
            android:background="@drawable/retrun"
            android:id="@+id/bt_return"
            android:layout_width="50dp"
            android:layout_height="50dp" />
        <TextView
            android:layout_weight="1"
            android:textColor="#56abe4"
            android:gravity="center"
            android:textSize="20sp"
            android:text="邮箱登录"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
        <Button
            android:visibility="invisible"
            android:layout_width="50dp"
            android:layout_height="50dp" />
    </LinearLayout>
    <EditText
        android:id="@+id/et_mail_account"
        android:background="@drawable/mail_login_et_background"
        android:gravity="center"
        android:hint="邮箱帐号"
        android:textColorHint="@color/mybluestyle"
        android:textColor="@color/mybluestyle"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:layout_above="@+id/et_password"
        android:layout_alignLeft="@+id/et_password"
        android:layout_alignStart="@+id/et_password" />
    <EditText
        android:background="@drawable/mail_login_et_background"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:hint="密码"
        android:textColorHint="@color/mybluestyle"
        android:textColor="@color/mybluestyle"
        android:inputType="textPassword"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:layout_marginBottom="129dp"
        android:id="@+id/et_password"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:layout_alignTop="@+id/et_password"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <CheckBox
            android:layout_marginLeft="70dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/save_password" />
        <TextView
            android:text="记住密码"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/bt_mail_login"
            android:background="@drawable/bt_mail_login"
            android:layout_marginLeft="90dp"
            android:layout_width="50dp"
            android:layout_height="40dp" />
    </LinearLayout>

</RelativeLayout>